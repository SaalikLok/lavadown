<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1><%= @doc.title %></h1>
      <p>Last Updated: <%= @doc.updated_at.strftime('%Y-%m-%d %H:%M') %></p>
      <hr>
      <%= Redcarpet::Markdown.new(Redcarpet::Render::HTML).render(@doc.content).html_safe %>
      <hr>
      <%= link_to 'Edit', edit_doc_path(@doc), class: 'btn btn-warning' %> |
      <%= link_to 'Delete', doc_path(@doc), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> |
      <%= link_to 'Back', docs_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>